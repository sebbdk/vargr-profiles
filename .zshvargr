# Simply include this file where-ever needed like so:
# source ~/.zshvargr

# Important
# Remember to add it in the personal alias section of the .zshrc file
# if using oh-my-zsh to avoid alias conflicts.

# Recommended plugins for .zshrc:
# plugins=(git zsh-autosuggestions zsh-syntax-highlighting fzf docker npm node z copypath)

gitCleadLS()
{
    clear

    if git status &>/dev/null; then
        git status $*
    fi
}

hint() {
    echo
    echo "Hello $(whoami), here are your shortcuts:"
    echo '---------------------------------'
    echo 'gls - git long single lines'
    echo 'gst - git status alias'
    echo 'gct - clear screen + git status'
    echo 'gco - git checkout alias'
    echo 'gbr - Show last 10 banches used'
    echo 
    echo 'ssh-copy-id user@host to setup keys on remote hosts'
    echo 'fzf use it for fuzzy finding files'
    echo 'Use temo like so:'
    echo 'tmux new -s hello | tmux a -t hello'
    echo
    echo 'dev - goes to dev folder'
    echo 'pro - goes to dev/projects folder'
    echo 'note - opens dev/notes in vscode'
    echo '---------------------------------'
    echo
    echo "You are currently in: $PWD"
    echo
}

# Folder shortcuts
alias dev='cd ~/dev'
alias pro='cd ~/dev/pro'

# Misc shortcuts
alias note='code ~/dev/logs' # opens my logs in vscode

# Git related shortcuts
alias gl='git log --oneline --all --graph --decorate  $*'
alias gst=gitCleadLS
alias gct='clear & git status $*'
alias gco='git checkout $*'
alias gls='git log --oneline'
alias gbr='git branch --sort=-committerdate | head -n 10'
alias party='curl http://parrot.live'

hint
